@model Domain.Login

@{
    ViewData["Title"] = "UserLogin";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function validateForm(){
        var email=document.getElementById("email");
        if(email.value=="") {
            alert("Email must be filled out");
            return false;
        }
        var password=document.getElementById("password");
        if(password.value=="") {
            alert("Password must be filled out");
            return true;
        }
    }
    </script>
<h1>UserLogin</h1>
@*
<h4>Login</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <input asp-for="EmailId" id="email" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" id="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="confirmPassword" class="control-label"></label>
                <input asp-for="confirmPassword" class="form-control" />
                <span asp-validation-for="confirmPassword" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" onclick="return validateForm()"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="User" asp-action="ForgotPassword">Forgot Password</a>

