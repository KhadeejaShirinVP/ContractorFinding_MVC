}

<script type="text/javascript">
    function validateForm(){
        var email=document.getElementById("email");
        if(email.value=="") {
            alert("Email must be filled out");
            return false;
        }
        var password=document.getElementById("password");
        if(password.value=="") {
            alert("Password must be filled out");
            return true;
        }
    }
    </script>


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>

    <style>
        *{
            padding:0;
            margin:0;
            box-sizing:border-box;
        }
        body{
            background: rgb(219,226,226);
        }
        .row{
            background:white;
            border-radius:30px;
            box-shadow:12px 12px 22px grey;
        }
        img{
            border-top-left-radius:30px;
            border-bottom-left-radius:30px;
            height:600px;
        }

        .btn1{
            border:none;
            outline:none;
            height:50px;
            width:100%;
            background-color:black;
            color:white;
            border-radius:4px;
            font-weight:bold;
        }
        btn1:hover{
            background:white;
            border:1px solid;
            color:black;
        }
    </style>
</head>
<body>

    <section class="Form my-4 mx-5">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                    <img src="~/Login 2.webp" class="img-fluid"  alt="" />
                </div>
                <div class="col-lg-7 px-5 pt-5">
                    <h1 class="font-weight-bold py-3">Login</h1>
                    <h4>Sign into your Account</h4>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                 <input type="email" asp-for="EmailId" placeholder="email@examble.com" id="email" class="form-control my-3 p-4" required="" />
                                 <span asp-validation-for="EmailId" class="text-danger"></span>
                            </div> 
                        </div>
                        <div class="form-row">
                            <div class="col-lg-7">
                                  <input asp-for="Password" id="password" placeholder="********" class="form-control my-3 p-4" />
                                  <span asp-validation-for="Password" class="text-danger"></span>                            
                              </div>
                        </div>
                         <div class="form-row">
                            <div class="col-lg-7">
                                @*<button type="button" class="btn1 mt-3 mb-5" asp action="Login">Login</button>  
                                <input type="submit" value="Submit" class="btn btn-primary" onclick="return validateForm()" />*@

                                <input type="submit" class="btn1 mt-3 mb-5" value="Login" onclick="return validateForm()" />
                            </div>
                        </div>
                        <a asp-controller="User" asp-action="ForgotPassword">Forgot Password</a>
                        <p> Don't have an account? <a asp-controller="User" asp-action="Registration">Register here</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
        

    
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
